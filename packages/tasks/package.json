{
	"name": "@nanobot-ai/tasks",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "echo OK",
		"dev": "NODE_ENV=development tsx --watch server.ts",
		"test": "tsx --test",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check . && pnpm run typecheck",
		"check:fix": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"ci": "pnpm run check && pnpm run test && pnpm run build",
		"prepublishOnly": "pnpm run ci"
	},
	"exports": {
		".": "./server.ts"
	},
	"dependencies": {
		"@nanobot-ai/coder": "workspace:*",
		"@nanobot-ai/nanomcp": "workspace:*",
		"@nanobot-ai/workspace-client": "workspace:*",
		"js-yaml": "^4.1.1",
		"zod-to-json-schema": "^3.25.0"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9"
	}
}
