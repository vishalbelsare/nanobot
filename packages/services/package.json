{
	"name": "@nanobot-ai/services",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"exports": {
		".": "./server.ts"
	},
	"keywords": [
		"mcp",
		"nanobot",
		"sandbox",
		"docker"
	],
	"author": "Darren Shepherd <darren@obot.ai>",
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"dev": "tsx --watch server.ts",
		"test": "tsx --test",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check . && pnpm run typecheck",
		"check:fix": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"ci": "pnpm run check && pnpm run test && pnpm run build",
		"prepublishOnly": "pnpm run ci"
	},
	"dependencies": {
		"@nanobot-ai/agentconfig": "workspace:*",
		"@nanobot-ai/coder": "workspace:*",
		"@nanobot-ai/nanomcp": "workspace:*",
		"@nanobot-ai/tasks": "workspace:*",
		"@nanobot-ai/workspace-mcp": "workspace:*",
		"@nanobot-ai/workspace-resources": "workspace:*",
		"@remix-run/fetch-router": "^0.13.0"
	},
	"devDependencies": {
		"tsup": "^8.5.1"
	}
}
